                                    <h3 class="my-0">Benefits</h3>
                                </div>
                                <div>
                                    <ul>
                                        {% for benefit in project.benefits %}
                                            <li>{{ benefit }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
            {% if project.who %}
                <div class="mb-12">
                    <h2 id="why" class="text-4xl font-bold mb-8 mt-0">
                        <span class="border-b-[6px] border-primary pb-2">Who's doing this</span>
                    </h2>
                    <img src="{{ project.who.image }}" />
                </div>
            {% endif %}
            {% if project.inspiration %}
                <div class="mb-12">
                    <h2 id="why" class="text-4xl font-bold mb-8 mt-0">
                        <span class="border-b-[6px] border-primary pb-2">Get Inspiration</span>
                    </h2>
                    {{ project.inspiration | markdown | safe }}
                </div>
            {% endif %}
        </div>
    </div>
</div>